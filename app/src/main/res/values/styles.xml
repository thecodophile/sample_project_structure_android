<resources xmlns:ns1="http://schemas.android.com/apk/res-auto">
    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Animation for dialog box -->
    <style name="DialogSlideAnim" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <!--<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>-->
    </style>

    <style name="DialogSlideChooseTeam" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimationLeft</item>
        <!--<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>-->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>
  <style name="DialogAnimationLeft">
        <item name="android:windowEnterAnimation">@anim/trans_right_in</item>
        <item name="android:windowExitAnimation">@anim/trans_right_out</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="OutlineTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#ffffff</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorTextColor">@color/yellow</item>
    </style>

    <style name="OutlineTextInputLayoutStyleProfile" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#AAAAAA</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorTextColor">@color/colorPrimary</item>
    </style>

    <style name="OutlineTextInputLayoutStyleGrey" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#AAAAAA</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorTextColor">@color/yellow</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="errorTextColor">@android:color/holo_red_light</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorThemeGreen</item>
        <item name="android:textStyle">bold</item>
        <item name="fontName">roboto_medium</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/color_states_materialbutton</item>
    </style>

    <style name="MaterialButtonStyleRed" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/color_states_materialbutton_primary</item>
    </style>

    <style name="CustomDialog" parent="DialogSlideAnim">
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_enter</item>
        <item name="android:windowExitAnimation">@anim/fade_exit</item>
    </style>

    <style name="ColorCheckStyle" parent="android:Widget.CompoundButton.CheckBox">
        <item name="buttonTint">@drawable/bg_check_button</item>
        <item name="fontFamily">roboto_medium</item>
    </style>

    <style name="SubtitleTextStyle.Small" parent="SubtitleTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontName">roboto</item>
    </style>

    <style name="SubtitleTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bottom_nav_style">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="DialogSlideBottomChooseTeam" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/choose_theme_popup_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <!--<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>-->
    </style>

    <style name="input_field_style" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_2sdp</item>

    </style>

    <style name="text_field_style" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_2sdp</item>
    </style>

    <style name="app_search_view" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/_7ssp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">@dimen/_1sdp</item>
        <item name="android:paddingEnd">@dimen/_2sdp</item>

    </style>

    <style name="TitleTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NormalBoldTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="fontName">roboto_medium</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TitleTextStyle.Medium" parent="TitleTextStyle">
        <item name="android:textSize">@dimen/_19ssp</item>
    </style>

    <style name="TitleTextStyle.Small" parent="TitleTextStyle" />

    <style name="ToolbarStyle" parent="TitleTextStyle">
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="SubtitleTextStyle.Medium" parent="SubtitleTextStyle">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="fontName">roboto_bold</item>
    </style>

    <style name="NormalBoldTextStyle.Medium" parent="NormalBoldTextStyle">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="fontName">roboto_bold</item>
    </style>

    <style name="SubtitleTextStyle.Bold" parent="SubtitleTextStyle">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="fontName">roboto_bold</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="home_list_child_shape_Corner_Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="more_child_shape_Corner_Percent" parent="">
        <item name="cornerSize">7%</item>
    </style>

    <style name="search_list_child_shape_Corner_Percent" parent="">
        <item name="cornerSize">5%</item>
    </style>

    <style name="list_child_title_style">
        <item name="android:textSize">@dimen/_7ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialButtonStyleRed.Small" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/color_states_materialbutton_primary</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="cornerRadius">@dimen/_20sdp</item>
    </style>

    <style name="home_list_child_shape_Corner_Percent.Stroke" parent="more_child_shape_Corner_Percent">
        <item name="stroke_width">@dimen/_2sdp</item>
        <item name="strokeColor">@color/white_30</item>
    </style>

    <style name="ProgressbarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/colorPrimary</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="ToolbarStyle.BigSize" parent="TitleTextStyle">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>


    <style name="AppThemeIosDialog" parent="Theme.Sample">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowActivityTransitions" ns1:targetApi="lollipop">false</item>
    </style>

    <style name="CardViewMembershipDialog" parent="CardView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">0dp</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/text_color</item>
        <item name="colorControlHighlight">@color/text_color</item>
    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>